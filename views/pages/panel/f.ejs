<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="py-3 mb-0">
    <span class="text-muted fw-light">آکادمی تکواندو یاری /</span>
    ثبت هنرجو جدید
  </h4>
  <div class="app-ecommerce">
    <form id="formValidationExamples">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">یک هنرجو جدید اضافه کنید</h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <button class="btn btn-primary" name="submitButton" type="submit">ثبت هنرجو</button>
        </div>
      </div>
      <div class="row">
        <!-- First column-->
        <div class="col-12 col-lg-8">
          <!-- Product Information -->
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="card-tile mb-0">اطلاعات هنرجو</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="formValidationName">نام</label>
                  <input class="form-control" id="formValidationName" name="formValidationName" placeholder="" type="text" />
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="formValidationName">نام خانوادگی</label>
                  <input class="form-control" id="formValidationName" name="formValidationName" placeholder="" type="text" />
                </div>

                <div class="col-md-6 mb-3">
                  <label class="form-label" for="ecommerce-product-name">کدملی</label>
                  <input aria-label="" class="form-control" id="ecommerce-product-name" name="productTitle" placeholder="" type="text" />
                </div>
                <div class="col-md-6 col-12 mb-3">
                  <label class="form-label" for="bs-datepicker-autoclose">تاریخ تولد</label>
                  <input class="form-control" id="bs-datepicker-autoclose" placeholder="" type="text" />
                </div>

                <div class="col-md-6 mb-3">
                  <label class="form-label" for="ecommerce-product-name">نام پدر</label>
                  <input aria-label="" class="form-control" id="ecommerce-product-name" name="productTitle" placeholder="" type="text" />
                </div>

                <div class="col-md-6 mb-3">
                  <label class="d-block form-label">جنسیت</label>
                  <div class="d-flex col">
                    <div class="row mt-0 col">
                      <div class="col-6">
                        <div class="form-check custom-option">
                          <label
                            class="p-2 d-flex justify-content-center align-items-center form-check-label custom-option-content"
                            for="basic-default-radio-male"
                          >
                            <input checked class="form-check-input" id="basic-default-radio-male" name="formValidationPlan" type="radio" value="" />
                            <span class="custom-option-body">
                              <span class="custom-option-title ms-2">مرد</span>
                            </span>
                          </label>
                        </div>
                      </div>
                      <div class="col-6">
                        <div class="form-check custom-option">
                          <label
                            class="p-2 d-flex justify-content-center align-items-center form-check-label custom-option-content"
                            for="basic-default-radio-female"
                          >
                            <input checked class="form-check-input" id="basic-default-radio-female" name="formValidationPlan" type="radio" value="" />
                            <span class="custom-option-body">
                              <span class="custom-option-title ms-2">زن</span>
                            </span>
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-md-6 mb-3">
                  <label class="form-label" for="ecommerce-product-name">تلفن همراه</label>
                  <input aria-label="" class="form-control" id="ecommerce-product-name" name="productTitle" placeholder="" type="text" />
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="ecommerce-product-name">تلفن داخلی</label>
                  <input aria-label="" class="form-control" id="ecommerce-product-name" name="productTitle" placeholder="" type="text" />
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="bs-validation-upload-file">عکس پروفایل</label>
                  <input class="form-control" id="bs-validation-upload-file" required type="file" />
                </div>
                <div class="mb-3 col-md-6 ecommerce-select2-dropdown">
                  <label class="form-label" for="bs-datepicker-disabled-days">تاریخ ثبت نام</label>
                  <input class="form-control" id="bs-datepicker-disabled-days" placeholder="" type="text" />
                </div>
                <div class="col mb-3">
                  <div class="form-group">
                    <label class="form-label" for="ecommerce-product-name">آدرس</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                  </div>
                </div>
              </div>

              <!-- Description -->
            </div>
          </div>
          <!-- /Product Information -->
        </div>
        <!-- /Second column -->
        <!-- Second column -->
        <div class="col-12 col-lg-4">
          <!-- Organize Card -->
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="card-title mb-0">اطلاعات باشگاه</h5>
            </div>
            <div class="card-body">
              <!-- Vendor -->
              <div class="mb-3 col ecommerce-select2-dropdown">
                <label class="form-label mb-1" for="vendor">انتخاب باشگاه</label>
                <select class="select2 form-select" data-placeholder="انتخاب کمربند" id="vendor">
                  <option value="">باشگاه را انتخاب کنید</option>
                  <option value="men-clothing">آکادمی تکواندو یاری</option>
                </select>
              </div>

              <div class="mb-3 col ecommerce-select2-dropdown">
                <label class="form-label mb-1" for="vendor">انتخاب مربی</label>
                <select class="form-select select2" data-placeholder="انتخاب مربی" id="vendor">
                  <option value="">مربی را انتخاب کنید</option>
                  <option value="men-clothing">محمدرضا یاری</option>
                </select>
              </div>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="card-title mb-0">اطلاعات کمربند</h5>
            </div>
            <div class="card-body">
              <!-- Vendor -->
              <div class="mb-3 col ecommerce-select2-dropdown">
                <label class="form-label mb-1" for="vendor">کمربند فعلی</label>
                <select class="select2 form-select" data-placeholder="انتخاب کمربند" id="vendor">
                  <option value="">کمربند را انتخاب کنید</option>
                  <option value="men-clothing">سفید</option>
                  <option value="women-clothing">زرد</option>
                  <option value="kid-clothing">سبز</option>
                  <option value="kid-clothing">آبی</option>
                  <option value="kid-clothing">قرمز</option>
                  <option value="kid-clothing">پوم 1</option>
                  <option value="kid-clothing">دان 1</option>
                  <option value="kid-clothing">پوم 2</option>
                  <option value="kid-clothing">دان 2</option>
                  <option value="kid-clothing">پوم 3</option>
                  <option value="kid-clothing">دان 3</option>
                  <option value="kid-clothing">پوم 4</option>
                  <option value="kid-clothing">دان 4</option>
                </select>
              </div>

              <div class="co mb-3">
                <label class="form-label" for="bs-datepicker-basic">تاریخ کمربند</label>
                <input class="form-control" id="bs-datepicker-basic" placeholder="" type="text" />
              </div>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="card-title mb-0">اطلاعات بیشتر</h5>
            </div>
            <div class="card-body">
              <!-- Vendor -->
              <div class="mb-3 col ecommerce-select2-dropdown">
                <label class="form-label" for="bs-datepicker-format">تاریخ بیمه ورزشی</label>
                <input class="form-control" id="bs-datepicker-format" placeholder="" type="text" />
              </div>

              <div class="col mb-3">
                <label class="form-label" for="ecommerce-product-name">شارژ بانک اطلاعاتی</label>
                <input aria-label="" class="form-control" id="ecommerce-product-name" name="productTitle" placeholder="" type="text" />
              </div>
            </div>
          </div>

          <!-- /Organize Card -->
        </div>
        <!-- /Second column -->
      </div>
    </form>
  </div>
</div>
