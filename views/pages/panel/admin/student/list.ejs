<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="py-3 mb-4">
    <span class="text-muted fw-light">هنرجویان/</span>
    لیست
  </h4>
  <div class="card">
    <div class="row p-3">
      <div class="col-sm-4 mb-2">
        <div class="input-group input-group-merge">
          <span class="input-group-text" id="basic-addon-search31">
            <i class="ti ti-search h-mirror"></i>
          </span>
          <input aria-describedby="basic-addon-search31" aria-label="جستجو ..." class="form-control" placeholder="جستجو ..." type="text" />
        </div>
      </div>
      <div class="col-sm-4 mb-2">
        <div class="select2Dark">
          <select class="select2 form-select" id="select2Dark" name="belts" multiple>
            <% for (const belt of belts) { %>
            <option value="<%- belt._id%>"><%- belt.name %></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="col-sm-4 mb-2">
        <div class="select2Dark">
          <select class="select2 form-select" id="select2" name="ages" multiple>
            <% for (const ageGroup of ageGroups) { %>
            <option value="<%- ageGroup._id%>"><%- ageGroup.name %></option>
            <% } %>
          </select>
        </div>
      </div>
    </div>

    <div class="table-responsive text-nowrap">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-1">پروفایل</th>
            <th class="col-3">نام و نام خانوادگی</th>
            <th class="d-none d-sm-table-cell">کد ملی</th>
            <th class="d-none d-sm-table-cell">کمربند</th>
            <th class="d-none d-lg-table-cell">رده سنی</th>
            <th class="d-none d-md-table-cell">شارژ بانک</th>
            <th class="col-1">عملیات</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          <% for (const student of students) { %>
          <tr>
            <td class="col-1">
              <div class="avatar">
                <% if(student.imageUrl) { %>
                <img alt="آواتار" class="rounded" src="student.imageUrl" />
                <% }else { %>
                <!---->
                <% const name = `${student.firstName.charAt(0)}‌${student.lastName.charAt(0)}` %>
                <!---->
                <% const colors = ["primary", "secondary", "success", "danger", "warning", "info"] %>
                <!---->
                <% const randomColor = colors[Math.floor(Math.random() * colors.length)] %>
                <!---->

                <span class="avatar-initial rounded-circle bg-label-<%- randomColor %>"><%- name %></span>
                <% } %>
              </div>
            </td>
            <td>
              <!-- <i class="ti ti-brand-angular ti-lg text-danger me-3"></i> -->
              <span class="name-table text-truncate fw-medium"><%- student.firstName %> <%- student.lastName %></span>
            </td>
            <td class="d-none d-sm-table-cell">
              <span class="fw-medium"><%- student.nationalCode %></span>
            </td>
            <td class="d-none d-sm-table-cell">
              <span class="fw-medium"><%- student.belt %></span>
            </td>
            <td class="d-none d-lg-table-cell">
              <% for (const ageGroup of student.ageGroups) { %>
              <span class="fw-medium badge bg-label-dark"><%- ageGroup.name %></span>

              <% } %>
            </td>

            <td class="d-none d-md-table-cell">
              <span class="fw-medium">1402</span>
            </td>

            <td>
              <div class="dropdown">
                <button class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" type="button">
                  <i class="ti ti-dots-vertical"></i>
                </button>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="javascript:void(0);">
                    <i class="ti ti-info-circle me-1"></i>
                    اطلاعات بیشتر
                  </a>
                  <a class="dropdown-item" href="javascript:void(0);">
                    <i class="ti ti-pencil me-1"></i>
                    ویرایش
                  </a>
                  <a class="dropdown-item" href="javascript:void(0);">
                    <i class="ti ti-trash me-1"></i>
                    حذف
                  </a>
                </div>
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
